<div class="container">


  <div class="row justify-content-center">
  <div class="col-10">
  <%= render 'shared/errors', obj: @user %>
    <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
    <div class="form-group row">
        <%= f.label :Username, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter user name" %>
        </div>
    </div>
    <div class="form-group row mt-3">
        <%= f.label :Email, class: "col-2 col-form-label text-light" %>
        <div class="col-10"> 
          <%= f.email_field :email, rows: 5, class: "form-control shadow rounded", placeholder: "Enter a email" %>
        </div>
    </div>
    <div class="form-group row mt-3">
        <%= f.label :Password, class: "col-2 col-form-label text-light" %>
        <div class="col-10"> 
          <%= f.password_field :password, rows: 5, class: "form-control shadow rounded", placeholder: "create password" %>
        </div>
    </div>

    <div class="col-md-12 text-center my-1 mt-3 ">
      <%= f.submit(@user.new_record? ? "SignUp" : "Update", class: "btn btn-outline-light btn-lg " )%>
    </div>
    <% end %>
  </div>
  
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info text-center mb-3" %>
  </div>
  </div> 
    