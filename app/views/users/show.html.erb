<div id="page-content">
    <h2 class="text-center mt-4">Name of user <%= @user.username %></h2>


    <%= gravatar_for @user, size: 200 %>

    <h3 class="text-center mt-4">Articles</h3>
    <div class="col-md-12 text-center my-1 mt-3 ">
    <%= link_to "Show Users", users_path, class: "btn btn-outline-success  " %>

    <% if logged_in? && @user==current_user %>
    <%= link_to "Edit User", edit_user_path(@user), class: "btn btn-outline-success  " %>
    <% end %>

    </div>

    <div class="flickr_pagination">
         <%= will_paginate @articles, :container => false %>
    </div>

    <%= render 'articles/article' %>
    
    
    <div class="flickr_pagination mb-4">
         <%= will_paginate @articles, :container => false %>
    </div>

</div>